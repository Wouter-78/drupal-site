# ==================================================
# .gitignore â€” Drupal (Composer-based project)
# ==================================================

# --------------------------------------------------
# macOS
# --------------------------------------------------
.DS_Store

# --------------------------------------------------
# IDEs / Editors
# --------------------------------------------------
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

# --------------------------------------------------
# Node / Frontend
# --------------------------------------------------
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.eslintcache
dist/
build/
**/dist/
**/build/
*.map

# --------------------------------------------------
# Composer / PHP
# --------------------------------------------------
vendor/
composer.phar
.phpunit.result.cache
.php_cs.cache

# Note: composer.lock SHOULD be tracked for reproducible builds
# (unless this is a library or Drupal module project)

# --------------------------------------------------
# DDEV (local development environment)
# --------------------------------------------------
.ddev/

# --------------------------------------------------
# Drupal Core / Contributed code (managed by Composer)
# --------------------------------------------------
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/

# --------------------------------------------------
# User-generated and temporary files
# --------------------------------------------------
/web/sites/*/files/*
/web/sites/*/private/
/web/sites/*/tmp/
/web/sites/*/translations/
/web/sites/*/php/
/tmp/
/cache/
/backups/

# Common automatically generated subdirectories
/web/sites/*/files/js/
/web/sites/*/files/css/
/web/sites/*/files/php/
/web/sites/*/files/styles/

# --------------------------------------------------
# Local settings and service files (often contain secrets)
/web/sites/*/settings*.php
/web/sites/*/services*.yml

# Keep example files under version control
!web/sites/example.settings.php
!web/sites/example.services.yml

# --------------------------------------------------
# Drupal Scaffold (generated by Composer)
/web/.ht.router.php
/web/sites/default/default.settings.php
/web/sites/default/default.services.yml

# --------------------------------------------------
# Configuration
# --------------------------------------------------
# The configuration sync directory SHOULD be tracked in Git
# (do not ignore /config/sync/ so configuration changes are versioned)

# --------------------------------------------------
# Environment files
# --------------------------------------------------
.env
.env.local
.env.*.local

# --------------------------------------------------
# Hosting / Platform specifics (optional)
/.acquia/
/.pantheon.yml
/.platform/
/.platform.app.yaml

# --------------------------------------------------
# Logs & miscellaneous
# --------------------------------------------------
*.log
*.bak
*.tmp
*.swp
*.cache
*.zip
*.tar.gz
*.sql
*.sqlite
*.sqlite3
backup-*.tar.gz
