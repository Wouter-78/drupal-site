{% extends "paragraph.html.twig" %}

{% block content %}
    {% set title = content.field_title %}
    {% set video = content.field_video %}

    <section data-aos="fade-up" class="video-block">
        <div class="video-block__inner container">
            {% if title %}
                <h2 class="text-block__title text-center">
                    {{ title }}
                </h2>
            {% endif %}
            {% if video %}
                <div class="w-full mt-8 max-w-3xl mx-auto drop-shadow-lg rounded-2xl overflow-hidden [&_iframe]:w-full [&_iframe]:h-auto [&_iframe]:aspect-video">
                    {{ video }}
                </div>
            {% endif %}
        </div>
    </section>

{% endblock %}
